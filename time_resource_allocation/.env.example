# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/time_resource_allocation

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Logging
LOG_LEVEL=INFO

# Task Assignment
DEFAULT_ASSIGNMENT_METHOD=balanced
MAX_ASSIGNMENTS_PER_EMPLOYEE=5

# Anomaly Detection
ANOMALY_DETECTION_INTERVAL=300
DEADLINE_RISK_THRESHOLD=3

# CORS (comma-separated list of origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# React App (Frontend)
REACT_APP_API_URL=http://localhost:5000/api
